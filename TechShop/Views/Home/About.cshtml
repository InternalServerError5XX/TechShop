@{
    ViewData["Title"] = "About Us";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="card-title">About TechShop</h1>
            <p class="card-text">Welcome to TechShop, your premier destination for the latest in technology products and accessories. We are dedicated to bringing you cutting-edge gadgets, computers, peripherals, and more at competitive prices.</p>

            <p class="card-text">At TechShop, we believe in making technology accessible to everyone, whether you're a tech enthusiast, professional, or casual user.</p>

            <div class="row mt-4">
                <div class="col-md-6">
                    <h5>Our Mission</h5>
                    <p class="card-text">Our mission is to provide innovative and high-quality technology products that enhance your daily life and work.</p>
                </div>
                <div class="col-md-6">
                    <h5>Our Values</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">Innovation: Embracing and promoting innovation in technology.</li>
                        <li class="list-group-item">Quality: Offering only the best products and services to our customers.</li>
                        <li class="list-group-item">Customer Satisfaction: Ensuring our customers are delighted with every purchase.</li>
                        <li class="list-group-item">Integrity: Operating with honesty and transparency in all business practices.</li>
                    </ul>
                </div>
            </div>

            <hr>

            <h5 class="mt-4">Contact Us</h5>
            <ul class="list-group mt-3">
                <li class="list-group-item"><i class="fas fa-envelope me-2"></i> Email: info@techshop.com</li>
                <li class="list-group-item"><i class="fas fa-phone me-2"></i> Phone: +1-123-456-7890</li>
                <li class="list-group-item"><i class="fas fa-map-marker-alt me-2"></i> Address: 123 Tech Street, Tech City, TC 12345</li>
            </ul>
        </div>
    </div>
</div>
